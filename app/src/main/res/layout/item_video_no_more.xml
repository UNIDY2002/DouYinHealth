<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/video_no_more_image"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/popup_background_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="26dp"
            android:contentDescription="@string/no_more"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_more"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/video_no_more_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="114dp"
            android:textSize="16sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_a_rest_before_returning"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="@id/video_no_more_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="144dp"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/video_no_more_rest_button"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:text="@string/have_a_rest"
            android:textSize="14sp"
            style="@style/ThemeButton"
            app:layout_constraintTop_toTopOf="@id/video_no_more_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="5sp"
            android:layout_marginTop="172dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>