<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.login.VerificationFragment">

    <ImageView
            android:id="@+id/verification_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/avatar"
            android:src="@drawable/login_avatar"/>

    <TextView
            android:id="@+id/verification_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_verification"
            app:layout_constraintTop_toBottomOf="@id/verification_avatar"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/verification_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_verification"
            app:layout_constraintTop_toBottomOf="@id/verification_title_text"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#bcbcbc"
            android:textSize="15sp"/>

    <Button
            android:id="@+id/verification_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verification_action"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/verification_hint_text"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>